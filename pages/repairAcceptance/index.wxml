<mp-toptips msg="{{error}}" type="error" show="{{error}}"></mp-toptips>
<view class="contain padding-40">
  <view class="background-curve"></view>
  <view class="card">
    <view class="card-header">
      <view class="row-item">
        <text class="row-name">设备SN</text>
        <text class="row-content">{{sn}}</text>
      </view>
      <view class="row-item">
        <text class="row-name">设备类型</text>
        <text class="row-content" wx:if="{{deviceType==1}}">超声</text>
        <text class="row-content" wx:elif="{{deviceType==2}}">内镜</text>
        <text class="row-content" wx:elif="{{deviceType==3}}">检验</text>
      </view>
    </view>
    <view class="card-body">
      <view class="talbe-wrap">
        <view class="label-text uploader-name">维修工单</view>
        <uploader max="4" data-type="maintenanceOrder" imgList="{{maintenanceOrderPic}}" bindUpload="uploadImg"
          bindDelete="deleteImg" binddisableBtn="disableBtn">
          <view class="iconfont icon-camera-copy"></view>
        </uploader>
      </view>
      <view class="talbe-wrap">
        <view class="label-text uploader-name">校准调试记录表</view>
        <uploader max="4" data-type="calibrationAndDebuggingRecord" imgList="{{calibrationAndDebuggingRecordPic}}"
          bindUpload="uploadImg" bindDelete="deleteImg" binddisableBtn="disableBtn">
          <view class="iconfont icon-camera-copy"></view>
        </uploader>
      </view>
      <!--view class="talbe-wrap">
        <view class="label-text uploader-name">交转报告</view>
        <uploader max="4" data-type="inTurnReport" imgList="{{inTurnReportImgList}}" bindUpload="uploadImg"
          bindDelete="deleteImg" binddisableBtn="disableBtn">
          <view class="uploader-wrap">
            <view class="iconfont icon-camera-copy"></view>
          </view>
        </uploader>
      </view -->
    </view>
  </view>
  <view class="form-footer">
    <button type="primary" class="custom-btn small" hover-class="btn-active" bindtap="goback">上一步</button>
    <button type="primary" class="custom-btn small" hover-class="btn-active" bindtap="nextStep"
      disabled="{{btnDisabled}}">完结</button>
  </view>
</view>

<!--签名弹框-->
<mp-dialog title="请输入服务信息" extClass="finishDialog" show="{{showOneButtonDialog}}" bindbuttontap="tapDialogButton"
  buttons="{{buttons}}">
  <mp-cells>
    <mp-cell prop="qq" title="服务人员" ext-class="serviceInfo">
      <input bindinput="getCreateUser" class="weui-input" placeholder="服务人员" />
    </mp-cell>
    <mp-cell prop="date" title="服务日期" ext-class="serviceInfo">
      <picker data-field="date" mode="date" value="{{date}}" bindchange="bindDateChange">
        <view class="weui-input">{{date}}</view>
      </picker>
    </mp-cell>
  </mp-cells>
</mp-dialog>