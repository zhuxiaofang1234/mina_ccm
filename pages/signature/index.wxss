/* pages/signature/index.wxss */
page{
  background-color: #fff;
}
.wrapper{
   height:100vh;
   width:100%;
   display: flex;
   flex-direction: column;
}
.signatureArea{
  flex:1;
  border:4rpx dashed #e9e9e9;
  background-color: #fff;
  margin-left:20rpx;
  margin-right:20rpx;
  margin-top:20rpx;
}
.handWriting{
  width:100%;
  height:100%;
}
.btnArea{
  height:50px;
  display: flex;
  flex-direction:row;
  width:100%;
}

.btnArea button:not([size='mini']) {
  margin-top:10px;
  width:80px;
  height:32px;
  font-size:14px;
  background-color: #ddd;
}

.btnArea button.subBtn{
  background-color: #009fab;
  color:#fff;
  text-align:center;
}
.subBtn:hover{
   background-color: #1d9da7!important;
}