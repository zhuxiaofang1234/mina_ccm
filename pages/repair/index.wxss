/* pages/repair/index.wxss */
@import '../../styles/task.wxss';

.task-form {
  margin-bottom: 26rpx
}

.label-title {
  font-size: 28rpx;
  color: #353535
}

.weui-cell.weui-cell-inform {
  font-size: 28rpx;
  color: #353535
}

.placeholder-text {
  font-size: 28rpx
}

.weui-input {
  height: 50rpx;
  margin-left: 40rpx;
}

.section.section_gap .radio-group {
  display: flex;
  margin-left: 40rpx;
  box-sizing: border-box;
}

.radio-group .radio {
  margin-right: 50rpx;
  font-size: 28rpx;
}

.info-wrap {
  overflow: hidden;
  background-color: #fff;
}

.clientInfo {
  width: 520rpx;
  min-height: 152rpx;
  border: 1px dotted #ddd;
  margin-left: 180rpx;
  margin-top: 12rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}

.clientInfo .clientInfoItem:first-child {
  margin-left: 20rpx;
}

.clientInfo .clientInfoItem:first-child text {
    margin-right:10rpx
}

.clientInfoItem {
  margin-top: 10rpx;
}

.clientInfoItem text {
  color: #7f7f7f
}

.textarea-wrap {
  width: 700rpx;
  margin: 30rpx auto;
}

.textarea {
  width: 100%;
  height: 200rpx;
  border: 1px solid #ebedf0;
  padding: 10rpx 32rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  font-size:28rpx;
}

.last-cell .weui-cells:after {
  height: 0
}

.linkClass .weui-cell__hd.weui-cell__hd {
  width: 140rpx;
}