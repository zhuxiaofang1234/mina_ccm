picker-view {
  height: 500rpx;
}

.salary-modal {
  width: 100%;
  height: 100%;
}

.salary-back {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 888;
  transition: all .2s ease-in-out;
  opacity: 0;
  visibility: hidden;
}

.salary-back.active {
  opacity: 1;
  visibility: visible;
}

.salary-content {
  width: 100%;
  background: #FFF;
  border-radius: 40rpx 40rpx 0px 0px;
  position: fixed;
  bottom: 0;
  z-index: 999;
  overflow: hidden;
  transform: translate3d(0, 100%, 0);
  transition: all .2s ease-in-out;
  visibility: hidden;
}

.salary-content.active {
  transform: translate3d(0, 0, 0);
  visibility: visible;
}

.salary-modal-title {
  width: 100%;
  height: 100rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.salary-list-title {
  font-size: 36rpx;
  color: #101D37;
  font-weight: 500;
}

.salary-btns {
  width: 100%;
  position: absolute;
  height: 110rpx;
  display: flex;
  top: 0;
  left: 0;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  color: #838D99;
  box-sizing: border-box;
}

.salary-btns text:nth-of-type(2) {
  color: #009fab;
}

.loading-page {
  background-color: #fff;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99;
}
